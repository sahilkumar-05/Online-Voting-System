@model ONLINEVS_Project.Models.Admin

@{
	ViewData["Title"] = "Admin Login"; ;
	
}

<style>
	.login-container {
		max-width: 50%;
		margin: 40px auto;
		background: white;
		border-radius: 40px;
		padding: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0px 0px 15px rgba(0,0,0,0.15);
	}

	.login-box {
		width: 60%;
	}
</style>

@if (ViewBag.Error != null)
{
	<div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="login-container">


	<!-- RIGHT SIDE LOGIN BOX -->
	<div class="login-box">
		<h2 style="font-family: 'Poppins', sans-serif; font-size: 30px; font-weight: 600; text-align: center;">
			Admin Login
		</h2>
		<p style="font-family: 'Poppins', sans-serif; font-size: 13px;text-align: center;">
			Hey enter your details to sign in to your account
		</p>
		<br />
			
		<form asp-action="Login" method="post">
			<div class="mb-4">
				<input name ="name" placeholder="Name" class="form-control form-control-lg" />
			</div>
			<div class="mb-4">	
			<input name ="email" placeholder="Email" class="form-control form-control-lg" />
			</div>
			<div class="mb-4">
				<input name ="cnic" placeholder="CNIC" class="form-control form-control-lg" required />
			</div>
			<div class="mb-4">
				<input name ="password" type="password" placeholder="Password" class="form-control form-control-lg" />
			</div>
			<button type="submit" class="btn btn-primary w-100 btn-lg">Login</button>
	
			@if (ViewBag.Error != null)
			{
				<p style="color:red">@ViewBag.Error</p>
			}
		</form>



	</div>
</div>
