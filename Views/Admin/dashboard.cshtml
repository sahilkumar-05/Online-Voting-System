@model ONLINEVS_Project.Models.Admin

@{
    ViewData["Title"] = "Admin Dashboard";
    var adminName = ViewBag.AdminName ?? "Admin";
    var adminId = ViewBag.AdminId ?? "N/A";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    :root {
        --primary-blue: #2c3e50;
        --accent-color: #3498db;
        --bg-light: #f8f9fa;
        --card-shadow: 0 4px 12px rgba(0,0,0,0.1);
    }

    body {
        background-color: var(--bg-light);
    }

    .stat-card {
        border: none;
        border-radius: 15px;
        transition: 0.3s;
        cursor: pointer;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.2);
        }

    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: rgba(255,255,255,.25);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
    }

    .welcome-banner {
        background: linear-gradient(135deg, var(--primary-blue), var(--accent-color));
        color: #fff;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: var(--card-shadow);
    }
</style>

<div class="container-fluid py-4">

    <!-- WELCOME -->
    <div class="welcome-banner d-flex justify-content-between align-items-center">
        <div>
            <h1 class="fw-bold">Welcome back, @adminName</h1>
            <p class="mb-0">
                Administrator ID:
                <span class="badge bg-light text-dark">@adminId</span>
            </p>
        </div>
        <i class="bi bi-shield-lock" style="font-size:4rem;opacity:.4"></i>
    </div>

    <!-- STATS -->
    <div class="row g-4 mb-4">

        <div class="col-md-3">
            <a asp-controller="Voter" asp-action="Index" class="text-decoration-none">
                <div class="card stat-card bg-primary text-white p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <small>REGISTERED VOTERS</small>
                            <h2>@ViewBag.Voters.Count</h2>
                        </div>

                        <div class="icon-box"><i class="bi bi-people"></i></div>
                    </div>
                </div>
            </a>

        </div>

        <div class="col-md-3">
            <a asp-controller="Election" asp-action="Index" class="text-decoration-none">
                <div class="card stat-card bg-success text-white p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <small>TOTAL ELECTIONS</small>
                            <h2>@ViewBag.Elections.Count</h2>
                        </div>
                        <div class="icon-box"><i class="bi bi-box"></i></div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Candidate" asp-action="Index" class="text-decoration-none">
                <div class="card stat-card bg-info text-white p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <small>TOTAL CANDIDATES</small>
                            <h2>@ViewBag.Candidates.Count</h2>
                        </div>
                        <div class="icon-box"><i class="bi bi-person-badge"></i></div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Voting"
               asp-action="VotesCastedResults"
               asp-route-electionId="1"
               class="text-decoration-none">

                <div class="card stat-card bg-danger text-white p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <small>VOTES CASTED</small>
                            <h2>@ViewBag.Votings.Count</h2>
                        </div>
                        <div class="icon-box">
                            <i class="bi bi-check-circle"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        
        @*  
        <div class="col-md-3">
            <a asp-controller="Voting" asp-action="Index" class="text-decoration-none">
                <div class="card stat-card bg-danger text-white p-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <small>VOTES CASTED</small>
                            <h2>@ViewBag.Votings.Count</h2>
                        </div>
                        <div class="icon-box"><i class="bi bi-check-circle"></i></div>
                    </div>
                </div>
            </a>
        </div>

    </div> *@

    <!-- ELECTION OVERVIEW -->
    <div class="card mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="fw-bold mb-0">Election Overview</h5>
            <a asp-controller="Admin" asp-action="CreateElection" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> New Election
            </a>
        </div>

        <div class="card-body table-responsive">
            <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Start - End Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var election in ViewBag.Elections)
                        {
                            bool isActive =
                            DateTime.Now >= election.StartDate &&
                            DateTime.Now <= election.EndDate;

                            <tr>
                                <td class="fw-bold">@election.Title</td>

                                <td>
                                    @election.StartDate.ToString("dd MMM yyyy")
                                    -
                                    @election.EndDate.ToString("dd MMM yyyy")
                                </td>

                                <td>
                                    @if (isActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>

                                <td>
                                    <a asp-controller="Election"
                                       asp-action="Details"
                                       asp-route-id="@election.ElectionId"
                                       class="btn btn-info btn-sm">
                                        Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

            </table>
        </div>
    </div>

        <!-- RECENT CANDIDATES -->
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="fw-bold mb-0">Recent Candidates</h5>
            </div>

            <div class="list-group list-group-flush">
                @foreach (var candidate in ViewBag.Candidates)
                {
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@candidate.Name</strong><br />
                                <small class="text-muted">
                                    Election: @candidate.Election?.Title
                                </small>
                            </div>

                            <a asp-controller="Candidate"
                               asp-action="Details"
                               asp-route-id="@candidate.Candidate_ID"
                               class="btn btn-info btn-sm">
                                View
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

        </div>
    </div>

</div>
