@model ONLINEVS_Project.Models.Voter

@{
    ViewData["Title"] = "Voter Signup"; ;
    
}

<style>
    .form-container {
        max-width: 50%;
        margin: 40px auto;
        background: white;
        border-radius: 40px;
        padding: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0px 0px 15px rgba(0,0,0,0.15);
    }

    .form-box {
        width: 60%;
    }
</style>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="form-container">
    <div class="form-box">
        <h2 style="font-family: 'Poppins', sans-serif; font-size: 30px; font-weight: 600; text-align: center;">
            Voter Sign Up
        </h2>
        <p style="font-family: 'Poppins', sans-serif; font-size: 13px; text-align: center;">
            Fill in your details to create your account
        </p>
        <br />

        <form asp-action="SignUp" method="post">
            <div class="mb-4">
                <input asp-for="name" placeholder="Name" class="form-control form-control-lg" required />
            </div>
            <div class="mb-4">
                <div class="mb-4">
                    <input asp-for="votercnic"
                           placeholder="CNIC (13 digits)"
                           class="form-control form-control-lg"
                           maxlength="13"
                           inputmode="numeric"
                           pattern="[0-9]*"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                           required />
                    <span asp-validation-for="votercnic" class="text-danger"></span>
                </div>

            </div>
            <div class="mb-4">
                <input asp-for="email" placeholder="Email" type="email" class="form-control form-control-lg" required />
            </div>
            <div class="mb-4">
                <input asp-for="PasswordHash" type="password" placeholder="Password" class="form-control form-control-lg" required />
            </div>
            <div class="mb-4">
                <input asp-for="Age"
                       type="number"
                       min="18"
                       max="120"
                       placeholder="Age"
                       class="form-control form-control-lg"
                       required />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <div class="mb-4">
                    <input asp-for="c_number"
                           placeholder="Contact Number"
                           class="form-control form-control-lg"
                           maxlength="11"
                           inputmode="numeric"
                           pattern="[0-9]*"
                           oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                           required />
                </div>

            </div>
            <button type="submit" class="btn btn-success w-100 btn-lg">Sign Up</button>
            <div class="text-center mt-3">
                <p>
                    Already have an account?
                    <a asp-controller="Voter" asp-action="Login" class="btn btn-outline-primary btn-sm">
                        Login
                    </a>
                </p>
            </div>


            @if (ViewBag.Error != null)
            {
                <p style="color:red">@ViewBag.Error</p>
            }
        </form>
    </div>
</div>
