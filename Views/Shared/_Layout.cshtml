@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - OnlineVS_Project</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="m-0 p-0">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid px-4">
            <!-- Logo + Title -->
            <a class="navbar-brand d-flex align-items-center fw-bold fs-4" href="#">
                <img src="~/lib/images/information.png"
                     alt="Logo"
                     style="height:32px; width:32px;"
                     class="me-2" />
                Online Voting System
            </a>

            @if (!(controller == "Home" && action == "Index"))
            {
                <div class="ms-auto">
                    <a class="btn btn-outline-light btn-sm d-flex align-items-center"
                       asp-controller="Home" asp-action="Logout">
                        <img src="https://static.thenounproject.com/png/logout-icon-1262661-512.png"
                             alt="Logout"
                             style="height:16px; width:16px;"
                             class="me-1" />
                        Logout
                    </a>
                </div>
            }
    </nav>

    <!-- PAGE CONTENT -->
    <div class="d-flex flex-column min-vh-100">

        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="border-top text-center py-2 small text-muted">
            &copy; 2025 - OnlineVS_Project
        </footer>

    </div>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
