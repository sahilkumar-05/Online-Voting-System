@model ONLINEVS_Project.Models.Candidate

@{
    ViewData["Title"] = "Edit Candidate";
}

<style>
    .form-container {
        max-width: 55%;
        margin: 30px auto;
        background: #ffffff;
        border-radius: 30px;
        padding: 35px;
        box-shadow: 0 0 15px rgba(0,0,0,0.15);
    }
</style>

<div class="form-container">

    <div class="card-header bg-white text-center mb-4">
        <h2 class="fw-bold text-dark">Edit Candidate</h2>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Candidate_ID" />

        <div class="mb-3">
            <label asp-for="Candidate_Cnic" class="form-label fw-semibold"></label>
            <input asp-for="Candidate_Cnic" class="form-control" />
            <span asp-validation-for="Candidate_Cnic" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-semibold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Party" class="form-label fw-semibold"></label>
            <input asp-for="Party" class="form-control" />
            <span asp-validation-for="Party" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ElectionId" class="form-label fw-semibold"></label>
            <select asp-for="ElectionId" class="form-select" asp-items="ViewBag.ElectionId"></select>
            <span asp-validation-for="ElectionId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <input type="submit" value="Save Changes" class="btn btn-primary px-4" />
            <a asp-action="Index" class="text-decoration-none">Back to List</a>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
