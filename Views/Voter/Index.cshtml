@model IEnumerable<ONLINEVS_Project.Models.Voter>

@{
    ViewData["Title"] = "Registered Voters";
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Registered Voters List</h1>
        <div>
            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary me-2">
                <i class="bi bi-house-door-fill"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>CNIC</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                    </tr>
                </thead>

                <tbody class="text-center">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-muted py-4">
                                No voters found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.votercnic</td>
                                <td>@item.name</td>
                                <td>@item.email</td>
                                <td>@item.c_number</td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn i {
        margin-right: 4px;
    }
</style>
