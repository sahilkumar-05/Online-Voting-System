@model ONLINEVS_Project.Models.Candidate

@{
    ViewData["Title"] = "Delete Candidate";
}

<style>
    .delete-container {
        max-width: 55%;
        margin: 30px auto;
        background: #ffffff;
        border-radius: 30px;
        padding: 35px;
        box-shadow: 0 0 15px rgba(0,0,0,0.15);
    }

        .delete-container dt {
            font-weight: 600;
        }
</style>

<div class="delete-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-danger">Delete Candidate</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>

    <h5 class="text-warning mb-3">Are you sure you want to delete this candidate?</h5>

    <dl class="row mb-0">
        <dt class="col-sm-3">CNIC</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Candidate_Cnic)</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Party</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Party)</dd>

        <dt class="col-sm-3">Election</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Election.Description)</dd>
    </dl>

    <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
        <input type="hidden" asp-for="Candidate_ID" />
        <input type="submit" value="Delete" class="btn btn-danger px-4" />
        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
    </form>

</div>
