@model ONLINEVS_Project.Models.Candidate

@{
    ViewData["Title"] = "Candidate Details";
}

<style>
    .details-container {
        max-width: 55%;
        margin: 30px auto;
        background: #ffffff;
        border-radius: 30px;
        padding: 35px;
        box-shadow: 0 0 15px rgba(0,0,0,0.15);
    }

        .details-container dt {
            font-weight: 600;
        }
</style>

<div class="details-container">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Candidate Details</h2>
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-house-door"></i> Back to Dashboard
        </a>
    </div>

    <!-- DETAILS -->
    <dl class="row mb-0">
        <dt class="col-sm-3">CNIC</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Candidate_Cnic)</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">Party</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Party)</dd>

        <dt class="col-sm-3">Election</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Election.Description)</dd>
    </dl>

    <!-- ACTION BUTTONS -->
    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Candidate_ID" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>

        <a asp-action="Index" class="btn btn-outline-dark">
            <i class="bi bi-list"></i> Back to List
        </a>
    </div>

</div>
